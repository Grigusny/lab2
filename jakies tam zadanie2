#include <iostream>

using namespace std;
class punkt{
int x,y;
public:
void wypisz();
void wstaw();
};

main()
{
    punkt x;
    x.wstaw();
    x.wypisz();

}

/////////////////funkcje skaldowe klasy punkt
void punkt::wypisz()
{
    cout<<" x= " << x << " , y= " <<y << endl;

}

void punkt::wstaw()
{
    cout<<" x= " ;
    cin>> x;
    cout<<" y= " ;
    cin>> y;
}
